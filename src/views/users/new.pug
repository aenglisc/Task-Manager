extends ../layouts/application.pug

block content
  .jumbotron
    h1.text-center.display-1
      | Sign up

    .row.mt-3
      .col-sm-6.mx-auto
        +formFor(f, { url: urlFor('users#create'), method: 'post' })
          +input(f, 'email', 'E-mail')
          +input(f, 'firstName', 'First name')
          +input(f, 'lastName', 'Last name')
          +input(f, 'password', 'Password', { as: 'password' })
          +button(f, 'Sign up')